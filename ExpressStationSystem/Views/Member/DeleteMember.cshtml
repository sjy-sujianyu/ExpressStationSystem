<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<script src="~/Views/Package/Package.js"></script>*@
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<body>

    <script>
        function changeShowCheckType(self) {
            var button = document.getElementById("showCheckType");
            button.innerHTML = self.innerText + ' <span class="caret"></span>';
        }

        function changeInputContent(self) {
            var input = document.getElementById("showCheckContent");
            input.placeholder = self.innerText + '查找';
        }

        function deleteMember(id) {
            $.ajax({
                url: 'http://172.16.34.153:60062/Manager/DeleteMember', /*接口域名地址*/
                contentType: "application/json;charset=UTF-8",
                type: 'delete',
                data: JSON.stringify({
                    'account': id
                }),
                success: function (res) {
                    if (res == true) {
                        alert('已经删除该员工');
                        window.location.reload();
                    } else {
                        alert('失败');
                        console.log(res);
                    }
                }
            })
        }

        function searchWith() {
            var searchMethod = document.getElementById("showCheckContent").placeholder;
            if (searchMethod == "按姓名查找") {
                window.location.href = '/Member/DeleteMember?searchWithName=' + document.getElementById("showCheckContent").value;
            }
            else if (searchMethod == "按手机查找") {
                window.location.href = '/Member/DeleteMember?searchWithPhone=' + document.getElementById("showCheckContent").value;
            }

        }

    </script>

    <div class="navbar navbar-default navbar-fixed-top">

        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Login/AfterLogin">首页</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="/Package/Package">包裹一览</a></li>
                    <li><a href="#">站点配车</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">人员管理<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Member/AllMember">员工一览</a></li>
                            <li><a href="/Member/AddMember">员工录用</a></li>
                            <li><a href="/Member/DeleteMember">员工开除</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/Member/Fine">奖罚款</a></li>
                            <li><a href="/Member/Leave">请假条</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/Member/Mission">任务分配</a></li>
                            <li><a href="/Member/Wages">工薪统计</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="输入单号查询包裹">
                    </div>
                    <button type="submit" class="btn btn-default">查询</button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">显示更多 <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Login/changePassword">修改超级密码</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/Login/exitLogin">退出用户</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div>
    </div>

    <h2 class='page-header'>员工开除</h2>

    <div class="col-sm-6 col-sm-offset-4" style="display:flex">

        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="showCheckType">
            按姓名 <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a onclick="changeShowCheckType(this);changeInputContent(this)">按姓名</a></li>
            <li><a onclick="changeShowCheckType(this);changeInputContent(this)">按手机</a></li>
        </ul>

        <div class="input-group">
            <input type="text" class="form-control" placeholder="按姓名查找" id="showCheckContent">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="searchWith()">Go!</button>
            </span>
        </div>
    </div>

    <br />

    <div class="col-sm-10" style="left:0rem;display:flex" >
        <table class="table table-hover">
            <thead style="display: table-header-group;vertical-align: middle;border-color: inherit;">
                <tr>
                    <th>肖像</th>
                    <th>姓名</th>
                    <th>联系手机</th>
                    <th>状态</th>
                </tr>

            </thead>
            <tbody style="display: table-row-group;vertical-align: middle;border-color: inherit;" onclick="">

                @for (int i = 0; i < ViewBag.phoneList.Count; i++)
                {
                    <tr>
                        <th scope="row"><img class="img-circle" src=@("http://" + ViewBag.imgList[i]) alt="头像" style="width:3rem;height:3rem;border-radius:3rem" /></th>
                        <td>@ViewBag.nameList[i]</td>
                        <td>@ViewBag.phoneList[i]</td>
                        <td>@ViewBag.jobList[i]</td>
                        <th>
                            <button type="button" class="btn-sm btn-danger" onclick="deleteMember(@ViewBag.phoneList[i])">开除</button>
                        </th>
                    </tr>
                }
            </tbody>
        </table>

        <div class='container-fluid col-sm-2' style="top:-4rem;margin-left:6rem">
            <div class="list-group">
                <h4 class="page-header">选择分类</h4>
                <a type="button" class="list-group-item" href='/Member/DeleteMember'>全部</a>
                <a type="button" class="list-group-item" href="/Member/DeleteMember?status=待定中">待定中</a>
                <a type="button" class="list-group-item" href="/Member/DeleteMember?status=派件员">派件员</a>
                <a type="button" class="list-group-item" href="/Member/DeleteMember?status=转件员">转件员</a>
                <a type="button" class="list-group-item" href="/Member/DeleteMember?status=揽件员">揽件员</a>
            </div>
        </div>
    </div>

    
</body>
</html>

