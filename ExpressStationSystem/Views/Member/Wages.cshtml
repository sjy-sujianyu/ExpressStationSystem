<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<script src="~/Views/Package/Package.js"></script>*@
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<body>

    <script>
        function changeShowCheckType(self) {
            var button = document.getElementById("showCheckType");
            button.innerHTML = self.innerText + ' <span class="caret"></span>';
        }

        function changeInputContent(self) {
            var input = document.getElementById("showCheckContent");
            input.type = "text";
            input.placeholder = self.innerText + '查找';
        }

        function changeInputContentMonth(self) {
            var input = document.getElementById("showCheckContent");
            input.type = "month";
            input.placeholder = self.innerText + '查找';
        }

        function searchWith() {
            var searchMethod = document.getElementById("showCheckContent").placeholder;
            if (searchMethod == "按姓名查找") {
                window.location.href = '/Member/Wages?searchWithName=' + document.getElementById("showCheckContent").value;
            }
            else if (searchMethod == "按手机查找") {
                window.location.href = '/Member/Wages?searchWithPhone=' + document.getElementById("showCheckContent").value;
            }
            else if(searchMethod == "按月份查找"){
                alert(document.getElementById("showCheckContent").value);
                window.location.href = '/Member/Wages?searchWithMonth=' + document.getElementById("showCheckContent").value;
            }

        }
        
    </script>

    <div class="navbar navbar-default navbar-fixed-top">

        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Login/AfterLogin">首页</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="/Package/Package">包裹一览</a></li>
                    <li><a href="#">站点配车</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">人员管理<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Member/AllMember">员工一览</a></li>
                            <li><a href="/Member/AddMember">员工录用</a></li>
                            <li><a href="/Member/DeleteMember">员工开除</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/Member/Fine">奖罚款</a></li>
                            <li><a href="/Member/Leave">请假条</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/Member/Mission">任务分配</a></li>
                            <li><a href="/Member/Wages">工薪统计</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="输入单号查询包裹">
                    </div>
                    <button type="submit" class="btn btn-default">查询</button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">显示更多 <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Login/changePassword">修改超级密码</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/Login/exitLogin">退出用户</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </div>

    <h2 class='page-header'>工资统计</h2>



    <div class="col-sm-6 col-sm-offset-4" style="display:flex">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="showCheckType">
            按手机 <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a onclick="changeShowCheckType(this);changeInputContent(this)">按姓名</a></li>
            <li><a onclick="changeShowCheckType(this);changeInputContent(this)">按手机</a></li>
            <li><a onclick="changeShowCheckType(this);changeInputContentMonth(this)">按月份</a></li>
        </ul>
        
        <div class="input-group">
            <input type="text" class="form-control" placeholder="按手机查找" id="showCheckContent">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="searchWith()">Go!</button>
            </span>
        </div>
    </div>

    <br />

    <div class="col-sm-12" style="left:0rem;display:flex">
        <table class="table table-hover">
            <thead style="display: table-header-group;vertical-align: middle;border-color: inherit;">
                <tr>
                    <th>肖像</th>
                    <th>姓名</th>
                    <th>联系手机</th>
                    <th>本月工资详情</th>
                </tr>

            </thead>
            <tbody style="display: table-row-group;vertical-align: middle;border-color: inherit;" onclick="">

                @for (int i = 0; i < ViewBag.showPhoneList.Count; i++)
                {
                    <tr>
                        <th scope="row"><img class="img-circle" src=@("http://" + ViewBag.showImgList[i]) alt="头像" style="width:3rem;height:3rem;border-radius:3rem" /></th>
                        <td>@ViewBag.showNameList[i]</td>
                        <td>@ViewBag.showPhoneList[i]</td>
                        <td>
                            <div class="btn-group" style="padding:1px">
                                <button type="button" class="btn-Mission btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="MissionType1">
                                    <span class="glyphicon glyphicon-triangle-bottom"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li style="display:flex"><a>本月派件:</a><a class="Pie" id="MissionType1">@ViewBag.DeliveryCount[i]</a></li>
                                    <li style="display:flex"><a>本月揽件:</a><a class="Docs" id="MissionType1">@ViewBag.PickUpCount[i]</a></li>
                                    <li style="display:flex"><a>本月转件:</a><a class="Tra" id="MissionType1">@ViewBag.TransferCount[i]</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li style="display:flex"><a>底薪:</a><a class="Tra" id="MissionType1">@ViewBag.baseSalary[i]</a></li>
                                    <li style="display:flex"><a>补贴:</a><a class="Tra" id="MissionType1">@ViewBag.subsidy[i]</a></li>

                                    <li style="display:flex" data-toggle="modal" data-target="#@i">
                                        <a>罚款:</a><a class="Tra" id="MissionType1">@ViewBag.fine[i]</a>
                                    </li>
                                    <li role="separator" class="divider"></li>
                                    <li style="display:flex"><a>总工资:</a><a class="Wag" id="MissionType1">@ViewBag.totalSalary[i]</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>

                    <div class="modal fade" id="@i" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">罚款记录</h4>
                                </div>
                                <div class="modal-body">
                                    你被罚了
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </tbody>
        </table>

        

        <div class='container-fluid col-sm-2'>
            <div class="list-group">
                <h4 class="page-header">选择分类</h4>
                <button type="button" class="list-group-item">全部</button>
                <button type="button" class="list-group-item">空闲中</button>
                <button type="button" class="list-group-item">派件员</button>
                <button type="button" class="list-group-item">转件员</button>
                <button type="button" class="list-group-item">揽件员</button>
            </div>
        </div>
    </div>
    <div class="row" style="font-size:20px">
        本月站点统计:</div>
    <div class="row" style="display:flex;font-size:20px;margin-left:1rem">
        &nbsp;派件总数:&nbsp;<div id="SumPie" style="color:chartreuse">@ViewBag.sumDelivery&nbsp;&nbsp;</div>揽件总数:&nbsp;<div id="SumDocs" style="color:cornflowerblue">@ViewBag.sumPickUp&nbsp;&nbsp;</div>转件总数:&nbsp;<div id="SumTra" style="color:orangered">@ViewBag.sumTransfer&nbsp;&nbsp;</div>工资总额:&nbsp;<div id="SumWag">@ViewBag.sumSalary</div>
    </div>





</body>
</html>

