    <script>
        function changeShowCheckType(self) {
            var button = document.getElementById("showCheckType");
            button.innerHTML = self.innerText + ' <span class="caret"></span>';
        }

        function changeInputContent(self) {
            var input = document.getElementById("showCheckContent");
            input.placeholder = self.innerText + '查找';
        }

        function turnToDetail(id) {
            window.location.href = '/Member/DetailMember?id=' + id;
        }

        function searchWith(currentPage) {
            window.location.href = "/Member/moneyList?status=" + document.getElementById("selectType").innerText + "&searchWith=" + document.getElementById("showCheckType").innerText.replace(/\s+/g, "") + "&searchWithContent=" + document.getElementById("showCheckContent").value + "&page=" + (currentPage).toString();

        }
        function JumpTo(status, currentPage) {
            window.location.href = "/Member/moneyList?status=" + status + "&searchWith=" + document.getElementById("showCheckType").innerText + "&searchWithContent=" + document.getElementById("showCheckContent").value + "&page=" + (currentPage).toString();
        }
        function JumpToPage(status, currentPage, count) {
            window.location.href = "/Member/moneyList?status=" + status + "&searchWith=" + document.getElementById("showCheckType").innerText + "&searchWithContent=" + document.getElementById("showCheckContent").value + "&page=" + (currentPage + count).toString();
        }
        function cancel(sId) {
            $.ajax({
                url: 'http://172.16.34.153:60062/Money/Delete?id=' + sId, /*接口域名地址*/
                contentType: "application/json;charset=UTF-8",
                type: 'delete',
                data: JSON.stringify({
                    'id': sId
                }),
                success: function (res) {
                    if (res == true) {
                        alert('已经删除该条单');
                        window.location.reload();
                    } else {
                        alert('删除失败');
                    }
                }
            })
        }

    </script>
</head>
