    <script>
        function changeShowCheckType(self) {
            var button = document.getElementById("showCheckType");
            button.innerHTML = self.innerText + ' <span class="caret"></span>';
        }

        function changeInputContent(self) {
            var input = document.getElementById("showCheckContent");
            input.placeholder = self.innerText + '查找';
        }

        function turnToDetail(id) {
            window.location.href = '/Member/DetailMember?id=' + id;
        }

        function searchWith() {
            var searchMethod = document.getElementById("showCheckContent").placeholder;
            if (searchMethod == "按姓名查找") {
                window.location.href = '/Member/AllMember?searchWithName=' + document.getElementById("showCheckContent").value;
            }
            else if (searchMethod == "按手机查找") {
                window.location.href = '/Member/AllMember?searchWithPhone=' + document.getElementById("showCheckContent").value;
            }

        }

    </script>
