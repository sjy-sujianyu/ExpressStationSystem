    <h2 class='page-header'>任务分配</h2>

    <div class="col-sm-6 col-sm-offset-4" style="display:flex">

        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="showCheckType">
            @ViewBag.searchWith<span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a onclick="changeShowCheckType(this);changeInputContent(this)">按姓名</a></li>
            <li><a onclick="changeShowCheckType(this);changeInputContent(this)">按手机</a></li>
        </ul>

        <div class="input-group">
            <input type="text" class="form-control" placeholder="" id="showCheckContent" value="@ViewBag.searchWithContent">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="searchWith()">Go!</button>
            </span>
        </div>
    </div>

    <br />

    <div class="col-sm-9" style="display:flex">
        <table class="table table-hover">
            <thead style="display: table-header-group;vertical-align: middle;border-color: inherit;">
                <tr>
                    <th>肖像</th>
                    <th>姓名</th>
                    <th>联系手机</th>
                    <th>状态</th>
                    <th>职位</th>
                </tr>

            </thead>
            <tbody style="display: table-row-group;vertical-align: middle;border-color: inherit;" onclick="">

                @foreach (var man in ViewBag.showMen)
                {
                <tr>
                    <th scope="row"><img class="img-circle" src=@("http://" + man.imagePath) alt="头像" style="width:3rem;height:3rem;border-radius:3rem" /></th>
                    <td>@man.name</td>
                    <td>@man.mId</td>
                    @if (man.onDuty)
                    {
                        <td>工作中</td>
                    }
                    else
                    {
                        <td>休息中</td>
                    }
                    <td>@man.job</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn-Mission btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="selectedJob">
                                @man.job<span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a onclick="update(this);finish(@man.mId,this)">派件员</a></li>
                                <li><a onclick="update(this);finish(@man.mId,this)">揽件员</a></li>
                                <li><a onclick="update(this);finish(@man.mId,this)">出件员</a></li>
                                <li><a onclick="update(this);finish(@man.mId,this)">待定中</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
                }

            </tbody>
        </table>

        <div class='container-fluid col-sm-3' style="top:-1rem;left:6rem">
            <div class="list-group">
                <h4 class="page-header" id="selectType">@ViewBag.status</h4>
                <a class="list-group-item" onclick="JumpTo()">全部</a>
                <a class="list-group-item" onclick="JumpTo('待定中')">待定中</a>
                <a class="list-group-item" onclick="JumpTo('派件员')">派件员</a>
                <a class="list-group-item" onclick="JumpTo('出件员')">出件员</a>
                <a class="list-group-item" onclick="JumpTo('揽件员')">揽件员</a>
            </div>
        </div>
    </div>




</body>
