<body>

    <script>
        function changeShowCheckType(self) {
            var button = document.getElementById("selectedJob");
            button.innerHTML = self.innerText + ' <span class="caret"></span>';
        }

        function changeInputContent(self) {
            var input = document.getElementById("selectedJob");
            input.placeholder = self.innerText + '查找';
        }

        function update(self) {
            var btn = document.getElementById("selectedJob");
            btn.innerHTML = self.innerText + ' <span class="caret"></span>';
        }

        function AllSleep() {

        }

        function AllWork() {

        }

        function finish(mId, self) {
            var newJob = self.innerText;
            $.ajax({
                type: 'put',
                url: 'http://172.16.34.153:60062/Manager/ChangeJob',
                data: JSON.stringify({
                    mId: mId,
                    job: newJob
                }),
                contentType: "application/json;charset=UTF-8",
                success: function (res) {
                    if (res == true) {
                        alert("修改完成");
                        window.location.reload();
                    }
                    else {
                        alert("出错了");
                    }
                }
            });
        }

        function searchWith() {
            window.location.href = "/Member/Mission?status=" + document.getElementById("selectType").innerText + "&searchWith=" + document.getElementById("showCheckType").innerText.replace(/\s+/g, "") + "&searchWithContent=" + document.getElementById("showCheckContent").value;

        }
        function JumpTo(status) {
            window.location.href = "/Member/Mission?status=" + status + "&searchWith=" + document.getElementById("showCheckType").innerText + "&searchWithContent=" + document.getElementById("showCheckContent").value;
        }

    </script>

